generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Artist {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  genre       String
  image       String
  tags        String?
  description String
  createdAt   DateTime? @default(now())
  updatedAt   DateTime?
  songs       Song[]
}

model Song {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  comment   String
  link      String
  lyrics    String
  timestamp DateTime
  artistId  String   @db.ObjectId
  artist    Artist   @relation(fields: [artistId], references: [id])
}
